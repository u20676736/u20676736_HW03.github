
@{
    ViewBag.Title = "Files";

}
@model List<u20676736_HW03.Models.FileModel>
@using u20676736_HW03.Models
List<FileModel>filemodel = new List<FileModel>();


        <h2>Files</h2>
        <div style="height: 400px; overflow: auto;">
            <div class="well-sm">
                <table class="table table-condensed table-hover">
                    <thead style="position: sticky;top: 0">
                        <tr bgcolor="#222222" class="auto-style">
                            <th class="col-lg-8">File Name</th>
                            <th class="t, col-lg-2">Download Option</th>
                            <th class="t, col-lg-2">Delete Option</th>
                        </tr>
                    </thead>
                    @foreach (var filemodel in Model)
                    {
                        <tr>
                            @*
                                Default >> @Html.DisplayFor(modelItem => file.FileName)
                            *@

                            <td>@filemodel.FileName</td>
                            <td>
                                <button>
                                    @Html.ActionLink("Download", "DownloadFile",
                                     new { fileName = filemodel.FileName })
                                </button>
                            </td>
                            <td>
                                <button>
                                    @Html.ActionLink("DELETE", "DeleteFile",
                                   new { fileName = filemodel.FileName },
                                   new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

